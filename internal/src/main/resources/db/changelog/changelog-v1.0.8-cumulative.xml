        <createIndex indexName="employee_id_index_allocation" tableName="allocation">
            <column name="employee_id"/>
        </createIndex>
        <createIndex indexName="application_id_index_allocation" tableName="allocation">
            <column name="application_id"/>
        </createIndex>

        <createIndex indexName="id_pas_index_applications" tableName="applications">
            <column name="id_pas"/>
        </createIndex>
        <createIndex indexName="datetime_index_applications" tableName="applications">
